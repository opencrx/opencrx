<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<izpack:shortcuts version="5.0" xmlns:izpack="http://izpack.org/schema/shortcuts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
	<programGroup defaultName="openCRX Server $PROJECT_VERSION" location="applications" />
	<shortcut
		name="Uninstall $APP_NAME"
		description="Uninstall $APP_NAME"
		target="java"
		commandLine="-jar Uninstall.jar"
		iconFile="$INSTALL_PATH/installer/favicon.ico"
		workingDirectory="$INSTALL_PATH/Uninstall/"
		terminal="false"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
	<shortcut
		name="Start $APP_NAME ($TOMCAT_HTTP_PORT)"
		description="Start $APP_NAME ($TOMCAT_HTTP_PORT)"
		target="$INSTALL_PATH/$TOMEE_BASEDIR/bin/opencrx.sh"
		commandLine="run"
		iconFile="$INSTALL_PATH/installer/favicon.ico"
		workingDirectory="$INSTALL_PATH/$TOMEE_BASEDIR/bin/"
		terminal="true"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
	<shortcut
		name="Stop $APP_NAME ($TOMCAT_HTTP_PORT)"
		description="Stop $APP_NAME ($TOMCAT_HTTP_PORT)"
		target="$INSTALL_PATH/$TOMEE_BASEDIR/bin/opencrx.sh"
		commandLine="stop"
		iconFile="$INSTALL_PATH/installer/favicon.ico"
		workingDirectory="$INSTALL_PATH/$TOMEE_BASEDIR/bin/"
		terminal="false"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
	<shortcut
		name="Start HSQLDB Console for $APP_NAME ($HSQLDB_PORT)"
		description="Start HSQLDB Console for $APP_NAME ($HSQLDB_PORT)"
		target="$INSTALL_PATH/data/hsqldb/dbmanager.sh"
		iconFile="$INSTALL_PATH/data/hsqldb/hsqldb.ico"
		workingDirectory="$INSTALL_PATH/data/hsqldb/"
		terminal="false"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
	<shortcut
		name="Start HSQLDB for $APP_NAME ($HSQLDB_PORT)"
		description="Start HSQLDB for $APP_NAME ($HSQLDB_PORT)"
		target="$INSTALL_PATH/data/hsqldb/db.sh"
		commandLine="run"
		iconFile="$INSTALL_PATH/data/hsqldb/hsqldb.ico"
		workingDirectory="$INSTALL_PATH/data/hsqldb/"
		terminal="true"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
	<shortcut
		name="Stop HSQLDB for $APP_NAME ($HSQLDB_PORT)"
		description="Stop HSQLDB for $APP_NAME ($HSQLDB_PORT)"
		target="$INSTALL_PATH/data/hsqldb/db.sh"
		commandLine="stop"
		iconFile="$INSTALL_PATH/data/hsqldb/hsqldb.ico"
		workingDirectory="$INSTALL_PATH/data/hsqldb/"
		terminal="false"
		type="Application"
		encoding="UTF-8"
		programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no">
	</shortcut>
</izpack:shortcuts>	

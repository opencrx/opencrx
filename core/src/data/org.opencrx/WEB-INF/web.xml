			<param-value>Root</param-value>
		</init-param>
		<init-param>
			<param-name>path[0]</param-name>
			<param-value>/SubscriptionHandler</param-value>
		</init-param>
		<init-param>
			<param-name>path[1]</param-name>
			<param-value>/WorkflowHandler</param-value>
		</init-param>
		<init-param>
			<param-name>path[2]</param-name>
			<param-value>/IndexerServlet</param-value>
		</init-param>
		<init-param>
			<param-name>path[3]</param-name>
			<param-value>/DocumentScannerServlet</param-value>
		</init-param>
		<init-param>
			<param-name>path[4]</param-name>
			<param-value>/MailImporterServlet</param-value>
		</init-param>
		<init-param>
			<param-name>path[5]</param-name>
			<param-value>/DocumentExporterServlet</param-value>

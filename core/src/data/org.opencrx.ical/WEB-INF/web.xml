<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>openCRX ICal service</display-name>
	<servlet>
		<servlet-name>FreeBusyServlet</servlet-name>
		<servlet-class>org.opencrx.application.ical.FreeBusyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ICalServlet</servlet-name>
		<servlet-class>org.opencrx.application.ical.ICalServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ICalServlet</servlet-name>
		<url-pattern>/ical</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ICalServlet</servlet-name>
		<url-pattern>/activities</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ICalServlet</servlet-name>
		<url-pattern>/bdays</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ICalServlet</servlet-name>
		<url-pattern>/anniversaries</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ICalServlet</servlet-name>
		<url-pattern>/datesofdeath</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FreeBusyServlet</servlet-name>
		<url-pattern>/freebusy</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<resource-ref>
		<res-ref-name>jdbc_opencrx_CRX</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>		
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>secure</web-resource-name>
			<description>secure</description>
			<url-pattern>/ical</url-pattern>
			<url-pattern>/activities</url-pattern>
			<url-pattern>/bdays</url-pattern>
			<url-pattern>/anniversaries</url-pattern>
			<url-pattern>/datesofdeath</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	<security-role>
		<description>An openCRX user</description>
		<role-name>OpenCrxUser</role-name>
	</security-role>
	<security-role>
		<role-name>OpenCrxAdministrator</role-name>
	</security-role>			
</web-app>
